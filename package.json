{
    "name": "nodejs-ddd-skeleton",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "swc src --copy-files -d dist",
        "test": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
        "test:unit": "jest tests/Unit",
        "test:integration": "jest tests/Integration --runInBand",
        "test:e2e": "cucumber-js -p e2e --publish-quiet --exit",
        "dev": "concurrently 'pnpm watch-compile' 'pnpm watch-dev'",
        "watch-compile": "swc src --copy-files -w --out-dir dist",
        "watch-dev": "nodemon --delay 10ms --watch 'dist/**/*' -e js ./dist/Apps/App.js",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sanurb/NodeJS-DDD-skeleton.git"
    },
    "engines": {
        "node": ">18.0.0"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/sanurb/NodeJS-DDD-skeleton/issues"
    },
    "homepage": "https://github.com/sanurb/NodeJS-DDD-skeleton#readme",
    "dependencies": {
        "@fastify/cors": "8.2.0",
        "@fastify/helmet": "10.1.0",
        "bson": "^5.0.1",
        "diod": "2.0.0",
        "dotenv": "16.0.3",
        "fastify": "4.10.2",
        "jsonwebtoken": "9.0.0",
        "mongodb": "4.12.1",
        "reflect-metadata": "0.1.13",
        "tinyglobby": "^0.2.10"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.3.0",
        "@commitlint/config-conventional": "^17.3.0",
        "@cucumber/cucumber": "^8.9.0",
        "@faker-js/faker": "^7.6.0",
        "@swc/cli": "^0.1.57",
        "@swc/core": "^1.3.21",
        "@swc/jest": "^0.2.23",
        "@swc/register": "^0.1.10",
        "@types/glob": "^8.0.0",
        "@types/jest": "^29.2.4",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/node": "^18.11.11",
        "@types/source-map-support": "^0.5.6",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.45.1",
        "@typescript-eslint/parser": "^5.45.1",
        "chokidar": "^3.5.3",
        "concurrently": "^7.6.0",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-editorconfig": "^4.0.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^27.1.6",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "jest-mock-extended": "^3.0.1",
        "lint-staged": "^13.1.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.0",
        "supertest": "^6.3.2",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.3"
    },
    "lint-staged": {
        "*.(j|t)s": "eslint --fix"
    }
}
