{
    "name": "nodejs-ddd-skeleton",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "swc src --copy-files -d dist",
        "test": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
        "test:unit": "jest tests/Unit",
        "test:integration": "jest tests/Integration --runInBand",
        "test:e2e": "cucumber-js -p e2e --publish-quiet --exit",
        "dev": "concurrently 'pnpm watch-compile' 'pnpm watch-dev'",
        "watch-compile": "swc src --copy-files -w --out-dir dist",
        "watch-dev": "nodemon --delay 10ms --watch 'dist/**/*' -e js ./dist/src/Apps/App.js",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sanurb/NodeJS-DDD-skeleton.git"
    },
    "engines": {
        "node": ">18.0.0"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/sanurb/NodeJS-DDD-skeleton/issues"
    },
    "homepage": "https://github.com/sanurb/NodeJS-DDD-skeleton#readme",
    "dependencies": {
        "@fastify/cors": "10.0.1",
        "@fastify/helmet": "12.0.1",
        "bson": "^6.9.0",
        "diod": "3.0.0",
        "dotenv": "16.4.5",
        "fast-glob": "^3.3.2",
        "fastify": "5.1.0",
        "jsonwebtoken": "9.0.2",
        "mongodb": "6.10.0",
        "reflect-metadata": "0.2.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@cucumber/cucumber": "^11.0.1",
        "@eslint/compat": "^1.2.2",
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.14.0",
        "@faker-js/faker": "^9.2.0",
        "@swc/cli": "^0.5.0",
        "@swc/core": "^1.8.0",
        "@swc/jest": "^0.2.37",
        "@swc/register": "^0.1.10",
        "@types/glob": "^8.1.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.9.0",
        "@types/source-map-support": "^0.5.10",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.13.0",
        "@typescript-eslint/parser": "^8.13.0",
        "chokidar": "^3.5.1",
        "concurrently": "^9.1.0",
        "eslint": "^9.14.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-editorconfig": "^4.0.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "^28.8.3",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "globals": "^15.12.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "jest-mock-extended": "^3.0.7",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "typescript": "^5.6.3"
